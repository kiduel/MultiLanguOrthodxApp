<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    android:layout_margin="16dp"
    android:background="@drawable/touch_selector"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/audio_photo_tv"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/audio_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="@string/audio_title_placeholder"
        android:layout_below="@+id/audio_photo_tv"/>

    <TextView
        android:id="@+id/audio_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_title_tv"
        tools:text="@string/audio_artist_placeholder" />



</RelativeLayout>
</android.support.v7.widget.CardView>