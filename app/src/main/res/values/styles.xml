<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ActionBar.Solid.Prayer.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/bete_selot_tool_image</item>
     </style>


    <style name="AppTheme.MainNoTitle" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Prayer.NoTitle</item>
    </style>

    <style name="HeadingTextStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:padding">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrayerText">
        <item name="android:textColor">#333</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:fontFamily">@font/jiret</item>
    </style>

    <style name="PrayerTextEnglish" parent="PrayerText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>
